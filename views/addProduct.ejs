<body>

    <div class="container">
        <form id="addProductForm">
            <img src="/images/logo.png">
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="name">Product Name <span class="required">*</span> </label>
                        <input type="text" placeholder="product name" class="form-control col-md-12" name="name">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="model">Product Model <span class="required">*</span></label>
                        <input type="text" placeholder="product model" class="form-control" name="model">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="price">Product Price <span class="required">*</span></label>
                        <input type="text" placeholder="product price" class="form-control checknum" id="price" name="price">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="category">Product Category <span class="required">*</span></label>
                        <input type="text" placeholder="product category" class="form-control" name="category">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="expireDate">Expire Date <span class="required">*</span></label>
                        <input type="date" class="form-control" name="expireDate">
                </div>
                <div class="col-md-6">
                    
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="vendor">Vendor Name <span class="required">*</span> </label>
                        <input type="text" placeholder="vendor name" class="form-control" name="vendor">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="address">Vendor Address <span class="required">*</span></label>
                        <input type="text" placeholder="vendor address" class="form-control" name="address">
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="contact">Vendor Contact <span class="required">*</span></label>
                    <input type="text" placeholder="vendor contact" class="form-control checknum" name="contact">
                </div>

            </div>

            <div class="row mt-3 btnSection">
                <div class="col-md-6 mt-2">
                    <button id="submit" class="btn btn-primary form-control"> Submit </button>
                </div>
                <div class="col-md-6 mt-2">
                    <button id="reset" class="btn btn-primary form-control"> Reset </button>
                </div>
            </div>
        </form>
    </div>


