
<%- include('./global.ejs') %>
<link rel="stylesheet" href="/styles/addUpdate.css">
    <div class="container">
        <form id="updateProductForm">
            <div><span class="close"> X </span></div>

            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="name">Product Name <span class="required">*</span> </label>
                    <input type="text" placeholder="product name" class="form-control col-md-12" name="name" id="name">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="model">Product Model <span class="required">*</span></label>
                    <input type="text" placeholder="product model" class="form-control" name="model" id="model">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="price">Product Price <span class="required">*</span></label>
                    <input type="text" placeholder="product price" class="form-control checknum" id="price" name="price" id="price">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="category">Product Category <span class="required">*</span></label>
                    <input type="text" placeholder="product category" class="form-control" name="category" id="category">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="expireDate">Expire Date <span class="required">*</span></label>
                    <input type="date" class="form-control" name="expireDate" id="expireDate">
                </div>
                <div class="col-md-6">
                    <label for="expireDate">Active <span class="required">*</span></label>
                    <select class="form-control" id="active" name="active">
                        <option value="true"> Active </option>
                        <option value="false"> Inactive </option>
                    </select>

                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="vendor">Vendor Name <span class="required">*</span> </label>
                    <input type="text" placeholder="vendor name" class="form-control" name="vendor" id="vendor">
                </div>
                <div class="col-md-6 mt-2">
                    <label for="address">Vendor Address <span class="required">*</span></label>
                    <input type="text" placeholder="vendor address" class="form-control" name="address" id="address">
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6 mt-2">
                    <label for="contact">Vendor Contact <span class="required">*</span></label>
                    <input type="text" placeholder="vendor contact" class="form-control checknum" name="contact" id="contact">
                </div>

            </div>

            <div class="row mt-3 btnSection">
                <div class="col-md-6 mt-2">
                    <button id="update" class="btn btn-primary form-control"> Update </button>
                </div>
                <div class="col-md-6 mt-2">
                    <button id="reset" class="btn btn-primary form-control"> Reset </button>
                </div>
            </div>
        </form>
    </div>
